<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.udacity.sandwichclub.DetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/sandwich_picture_content_description"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_below="@id/image_iv"
            android:id="@+id/origin_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_place_of_origin_label"
            android:textStyle="bold"
            style="@style/TextViewLabels"/>

        <TextView
            android:layout_below="@id/origin_label_tv"
            android:id="@+id/origin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewDetail"/>

        <TextView
            android:layout_below="@id/origin_tv"
            android:id="@+id/aliases_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_also_known_as_label"
            android:textStyle="bold"
            style="@style/TextViewLabels"/>

        <TextView
            android:layout_below="@id/aliases_label_tv"
            android:id="@+id/aliases_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewDetail"/>

        <TextView
            android:layout_below="@id/description_tv"
            android:id="@+id/ingredients_lable_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_ingredients_label"
            android:textStyle="bold"
            style="@style/TextViewLabels"/>

        <TextView
            android:layout_below="@id/ingredients_lable_tv"
            android:id="@+id/ingredients_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewDetail"/>

        <TextView
            android:layout_below="@id/decription_label_tv"
            android:id="@+id/description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewDetail"/>

        <TextView
            android:layout_below="@id/aliases_tv"
            android:id="@+id/decription_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_description_label"
            android:textStyle="bold"
            style="@style/TextViewLabels" />
    </RelativeLayout>
</ScrollView>